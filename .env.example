# ============================================
# UPI DISPUTE RESOLUTION - Environment Template
# ============================================
# Copy this file to .env.dev and .env.prod
# Fill in actual values for each environment

# ============ SERVER CONFIGURATION ============
SERVER_PORT=8000
SERVER_HOST=localhost
ENVIRONMENT=dev

# ============ FRONTEND CONFIGURATION ============
FRONTEND_URL=http://localhost:5173
FRONTEND_VITE_API_URL=http://localhost:8000

# ============ DATABASE CONFIGURATION ============
# Development: SQLite
DATABASE_URL=jdbc:sqlite:disputes.db
DATABASE_DIALECT=org.hibernate.community.dialect.SQLiteDialect
DATABASE_DRIVER=org.sqlite.JDBC

# Production: PostgreSQL (uncomment when needed)
# DATABASE_URL=jdbc:postgresql://localhost:5432/disputes_db
# DATABASE_DIALECT=org.hibernate.dialect.PostgreSQLDialect
# DATABASE_DRIVER=org.postgresql.Driver
DATABASE_USERNAME=disputes_user
DATABASE_PASSWORD=secure_password_here

# ============ JPA/HIBERNATE CONFIGURATION ============
JPA_HIBERNATE_DDL_AUTO=update
JPA_SHOW_SQL=false
JPA_PROPERTIES_HIBERNATE_FORMAT_SQL=true

# Connection pooling
DATASOURCE_MAX_POOL_SIZE=10
DATASOURCE_MIN_IDLE=2
DATASOURCE_CONNECTION_TIMEOUT=20000

# ============ BANK API CONFIGURATION ============
CUSTOMER_BANK_API_URL=https://api.customerbank.com/verify
MERCHANT_BANK_API_URL=https://api.merchantbank.com/verify
BANK_API_KEY=your-secret-bank-api-key-here
BANK_API_TIMEOUT=5000

# ============ NEFT SERVICE CONFIGURATION ============
NEFT_API_URL=https://api.bank.com/neft
NEFT_API_KEY=your-secret-neft-key-here
NEFT_API_TIMEOUT=10000

# ============ RISK SCORING ML CONFIGURATION ============
ML_SERVICE_URL=http://localhost:5000
ML_SERVICE_TIMEOUT=5000
RISK_SCORE_ENDPOINT=/api/risk-score

# ============ APPLICATION CONFIGURATION ============
APP_NAME=UPI Dispute Resolution Agent
APP_VERSION=1.0.0
LOG_LEVEL=INFO
DEBUG=false

# ============ CORS CONFIGURATION ============
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# ============ SECURITY CONFIGURATION ============
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-prod
JWT_EXPIRATION_MS=86400000

# ============ EMAIL CONFIGURATION (Optional) ============
MAIL_SERVICE_URL=https://api.sendgrid.com
MAIL_API_KEY=your-sendgrid-api-key
MAIL_FROM_ADDRESS=noreply@disputes.com
MAIL_FROM_NAME=UPI Dispute Resolution

# ============ LOGGING CONFIGURATION ============
LOG_FILE_PATH=logs/application.log
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_DAYS=30

# ============ MONITORING & METRICS ============
ENABLE_METRICS=true
METRICS_PORT=9090

# ============ CACHE CONFIGURATION ============
CACHE_ENABLED=true
CACHE_TTL_MINUTES=60

# ============ FEATURE FLAGS ============
FEATURE_RISK_SCORING=true
FEATURE_MERCHANT_DASHBOARD=false
FEATURE_AUTO_APPROVAL=true

# ============ THIRD-PARTY INTEGRATIONS ============
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz
DATADOG_API_KEY=your-datadog-api-key
